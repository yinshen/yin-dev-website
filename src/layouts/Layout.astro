---
import SpeedInsights from "@vercel/speed-insights/astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Yin Shen Full Stack Developer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://unpkg.com/htmx.org@2.0.0"></script>
		<script src="https://unpkg.com/hyperscript.org@0.9.12"></script>
	</head>
	<body>
	<div class="overlay overlay--scanline"></div>
	<div class="overlay overlay--vignette"></div>
	<slot />
	<SpeedInsights />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Perfect DOS VGA 437';
		src: url('/fonts/perfect-dos-vga437.woff') format('woff'),
		url('/fonts/perfect-dos-vga437.woff2') format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	:root {
		--color-primary: #00a;
	}

	html {
		height: 100%;
	}

	body {
		height: 100%;
		font-family: 'Perfect DOS VGA 437', system-ui, sans-serif;
		font-size: 1.2em;
		background-color: var(--color-primary);
		color: #f1f1f1;
		display: flex;
		justify-content: center;
	}

	.modal-shadow {
		box-shadow: 10px 10px 0px 0px rgba(0,0,0,0.75);
	}

	.overlay {
		width: 100%;
		height: 100%;
		position: fixed;
		z-index: 2;
		pointer-events: none;

		&.overlay--vignette {
			background-image: radial-gradient(ellipse at center, rgba(0,0,0,0) 50%, rgba(0,0,0,0.25) 100%);
		}

		&.overlay--scanline {
			background-image: linear-gradient(
				0deg,
				rgba(0,0,0,0) 25%,
				rgba(0,0,0,0.33) 25%,
				rgba(0,0,0,0.33) 50%,
				rgba(0,0,0,0) 50%,
				rgba(0,0,0,0) 75%,
				rgba(0,0,0,0.33) 75%,
				rgba(0,0,0,0.33) 100%
			);
			background-size: 4px 4px;
		}
	}

	input, textarea {
		background-color: transparent;

		&:hover, &:active, &:focus {
			background-color: white;
		}
	}

	label {
		display: flex;
		justify-content: space-between;
	}

	h1 {
		background-color: silver;
		color: var(--color-primary);
		padding: 0 1.2rem;
		font-size: 1.2rem;
		display: inline-block;
	}

	ul {
		list-style-type: none;
		padding-left: 1.5em;

		> li {
			position: relative;

			&:before {
				color: #f1f1f1;
				content: "*";
				position: absolute;
				left: -1.5em;
			}
		}
	}

	.blink {
		animation: blink 1s steps(1) infinite;
	}

	@keyframes blink {
		66% {
			opacity: 0;
		}
	}

	main {
		max-width: 640px;
		width: 100%;
		padding: 16px;
		margin-top: 10%;
	}
</style>
